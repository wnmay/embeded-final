void microDelay(uint16_t delay) {
    __HAL_TIM_SET_COUNTER(&htim1, 0);
    while (__HAL_TIM_GET_COUNTER(&htim1) < delay);
}

uint8_t DHT_Start(void)
{
    uint8_t Response = 0;
    GPIO_InitTypeDef GPIO_InitStructPrivate = {0};

    // 1) set pin เป็น output ดึงลง 18–20ms (ตาม datasheet) :contentReference[oaicite:0]{index=0}
    GPIO_InitStructPrivate.Pin = DHT11_PIN;
    GPIO_InitStructPrivate.Mode = GPIO_MODE_OUTPUT_PP;
    GPIO_InitStructPrivate.Speed = GPIO_SPEED_FREQ_LOW;
    GPIO_InitStructPrivate.Pull = GPIO_NOPULL;
    HAL_GPIO_Init(DHT11_PORT, &GPIO_InitStructPrivate);

    HAL_GPIO_WritePin(DHT11_PORT, DHT11_PIN, GPIO_PIN_RESET);
    HAL_Delay(20);                       // >=18ms

    HAL_GPIO_WritePin(DHT11_PORT, DHT11_PIN, GPIO_PIN_SET);
    microDelay(30);                      // 20–40us

    // 2) สลับเป็น input รอ response จาก DHT
    GPIO_InitStructPrivate.Mode = GPIO_MODE_INPUT;
    GPIO_InitStructPrivate.Pull = GPIO_PULLUP;
    HAL_GPIO_Init(DHT11_PORT, &GPIO_InitStructPrivate);

    microDelay(40);

    // ต้องเห็น DHT ดึงลง ~80us แล้วดึงขึ้น ~80us
    if (!HAL_GPIO_ReadPin(DHT11_PORT, DHT11_PIN)) {
        microDelay(80);
        if (HAL_GPIO_ReadPin(DHT11_PORT, DHT11_PIN))
            Response = 1;
    }

    // รอจนกว่ามันดึงลงจบ response
    pMillis_T = HAL_GetTick();
    cMillis_T = HAL_GetTick();
    while (HAL_GPIO_ReadPin(DHT11_PORT, DHT11_PIN) && (pMillis_T + 2 > cMillis_T)) {
        cMillis_T = HAL_GetTick();
    }

    return Response;
}

uint8_t DHT_Read(void)
{
    uint8_t a;
    uint8_t b = 0;

    for (a = 0; a < 8; a++)
    {
        // wait for line to go HIGH (เริ่มบิต)
        pMillis_T = HAL_GetTick();
        cMillis_T = HAL_GetTick();
        while (!HAL_GPIO_ReadPin(DHT11_PORT, DHT11_PIN) && (pMillis_T + 2 > cMillis_T)) {
            cMillis_T = HAL_GetTick();
        }

        microDelay(40);     // sample กลาง ๆ ช่วง high

        if (!HAL_GPIO_ReadPin(DHT11_PORT, DHT11_PIN))
            b &= ~(1 << (7 - a));    // bit = 0
        else
            b |=  (1 << (7 - a));    // bit = 1

        // wait for line to go LOW จบบิตนี้
        pMillis_T = HAL_GetTick();
        cMillis_T = HAL_GetTick();
        while (HAL_GPIO_ReadPin(DHT11_PORT, DHT11_PIN) && (pMillis_T + 2 > cMillis_T)) {
            cMillis_T = HAL_GetTick();
        }
    }
    return b;
}


void StartThermal_and_Humidity(DHT_DataTypedef *DHT_Data)
{
    char buffer[120];

    if (!DHT_Start()) {
        sprintf(buffer, "DHT start failed (no response)\r\n");
        HAL_UART_Transmit(&huart2, (uint8_t*)buffer, strlen(buffer), HAL_MAX_DELAY);
        DHT_Data->Temperature = -1;
        DHT_Data->Humidity    = -1;
        HAL_Delay(200);
        return;
    }

    uint8_t RHI = DHT_Read(); // humidity int
    uint8_t RHD = DHT_Read(); // humidity decimal (DHT11 ส่วนมากจะเป็น 0)
    uint8_t TCI = DHT_Read(); // temp int
    uint8_t TCD = DHT_Read(); // temp decimal
    uint8_t SUM = DHT_Read(); // checksum

    sprintf(buffer,
            "RAW -> RHI=%u RHD=%u TCI=%u TCD=%u SUM=%u\r\n",
            RHI, RHD, TCI, TCD, SUM);
    HAL_UART_Transmit(&huart2, (uint8_t*)buffer, strlen(buffer), HAL_MAX_DELAY);

    if ((uint8_t)(RHI + RHD + TCI + TCD) == SUM)
    {
        float tempC = TCI + TCD / 10.0f;
        float hum   = RHI + RHD / 10.0f;

        sprintf(buffer, "VALID DATA -> Temp: %d C, Humidity: %d %%\r\n",
                tempC, hum);
        HAL_UART_Transmit(&huart2, (uint8_t*)buffer, strlen(buffer), HAL_MAX_DELAY);

        DHT_Data->Temperature = tempC;
        DHT_Data->Humidity    = hum;
    }
    else
    {
        sprintf(buffer,
                "!!! CHECKSUM ERROR: sum=%u but expected %u\r\n",
                SUM, (uint8_t)(RHI + RHD + TCI + TCD));
        HAL_UART_Transmit(&huart2, (uint8_t*)buffer, strlen(buffer), HAL_MAX_DELAY);

        DHT_Data->Temperature = -1;
        DHT_Data->Humidity    = -1;
    }

    HAL_Delay(200);
}

/**
  * @brief  Read single conversion from specified ADC channel on ADC1.
  * @param  channel: ADC_CHANNEL_x (e.g. ADC_CHANNEL_0 for PA0).
  * @retval 12-bit ADC value (0..4095)
  */
uint32_t ReadADC_Channel(uint32_t channel)
{
  ADC_ChannelConfTypeDef sConfig = {0};

  sConfig.Channel      = channel;
  sConfig.Rank         = 1;
  sConfig.SamplingTime = ADC_SAMPLETIME_480CYCLES;

  if (HAL_ADC_ConfigChannel(&hadc1, &sConfig) != HAL_OK)
  {
    Error_Handler();
  }

  if (HAL_ADC_Start(&hadc1) != HAL_OK)
  {
    Error_Handler();
  }

  if (HAL_ADC_PollForConversion(&hadc1, HAL_MAX_DELAY) != HAL_OK)
  {
    Error_Handler();
  }

  uint32_t value = HAL_ADC_GetValue(&hadc1);

  HAL_ADC_Stop(&hadc1);

  return value;
}

/**
  * @brief  Arduino-style map with clamping
  */
long map_long(long x, long in_min, long in_max, long out_min, long out_max)
{
  long res = (x - in_min) * (out_max - out_min) / (in_max - in_min) + out_min;
  if (x < in_min) return out_min;
  if (x > in_max) return out_max;
  return res;
}

